# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/library-tracker
# For MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/library-tracker?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Firebase Admin Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Firebase private key here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173,http://localhost:5174

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
ENABLE_RATE_LIMITING=true
ENABLE_PROGRESSIVE_BLOCKING=true

# Security Configuration
TRUSTED_IPS=127.0.0.1,::1
BLACKLISTED_IPS=
ENABLE_IP_WHITELIST=false
ENABLE_IP_BLACKLIST=false
ALLOW_PRIVATE_IPS=true
ALLOW_LOCALHOST=true

# JWT Security
JWT_ACCESS_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# Session Management
MAX_CONCURRENT_SESSIONS=5
SESSION_TIMEOUT=86400000
TRACK_USER_ACTIVITY=true
DETECT_SUSPICIOUS_ACTIVITY=true

# File Upload Security
MAX_UPLOAD_SIZE=10MB
ENABLE_VIRUS_SCANNING=false
QUARANTINE_PATH=./quarantine

# Database Security
DB_ENCRYPTION=false
DB_QUERY_LOGGING=false
DB_CONNECTION_TIMEOUT=30000
DB_MAX_CONNECTIONS=10

# API Security
ENABLE_API_KEYS=false
ENABLE_REQUEST_SIGNING=false
ENABLE_GEOLOCATION=false
REQUEST_TIMEOUT=30000
MAX_REQUEST_SIZE=10mb

# Monitoring and Logging
ENABLE_SECURITY_LOGGING=true
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_LOGGING=true
LOG_LEVEL=info
SECURITY_EVENT_WEBHOOK=
FAILED_LOGIN_THRESHOLD=5
SUSPICIOUS_REQUEST_THRESHOLD=10
RATE_LIMIT_VIOLATION_THRESHOLD=3

# Multi-Factor Authentication
ENABLE_MFA=false

# Logging
LOG_LEVEL=info

# API Configuration
API_VERSION=v1
